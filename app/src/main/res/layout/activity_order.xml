<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        >
        <!--android:onClick="createOrderId"-->
        <!--android:clickable="true"-->
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/pay_prepare_npwd"
            android:text="生成免密订单"
            android:layout_marginRight="30dp"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/pay_prepare_pwd"
            android:text="生成非免密订单"

            />
    </LinearLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <cn.evergrande.it.common.zxing.view.QrBarView
            android:id="@+id/qrImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            app:typeImage="1"
            app:dataValue="这个是二维码"
            app:imgWidth="600"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button
                android:id="@+id/initsdk"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="初始化SDK"

                />
            <Button
                android:id="@+id/createQrCode"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="生成二维码"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="扫码"
                android:id="@+id/scan_code"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="撤单"
                android:id="@+id/cancel_order"
                android:visibility="gone"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="撤单(未付款)"
                android:id="@+id/revoke_order"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="退款(已付款)暂不支持"
                android:id="@+id/refund_order"
                android:clickable="false"
                android:visibility="gone"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:text="清除log"
                android:id="@+id/clear_log"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:textIsSelectable="true"
        android:id="@+id/logTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarFadeDuration="2000"
        android:focusable="true"
        android:longClickable="true"
        />




</LinearLayout>
